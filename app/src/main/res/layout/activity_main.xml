<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF63C2"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/math_Operation"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        app:layout_constraintBaseline_toTopOf="@+id/result_Operation"
        android:textColor="@android:color/white"
        android:textSize="40sp" />


    <TextView
        android:id="@+id/result_Operation"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_AC"
                style="@style/actionButton"
                android:text="AC" />

            <TextView
                android:id="@+id/btn_bracket1"
                style="@style/actionButton"
                android:text="(" />

            <TextView
                android:id="@+id/btn_bracket2"
                style="@style/actionButton"
                android:text=")" />

            <TextView
                android:id="@+id/btn_multiplications"
                style="@style/actionButton"
                android:text="ร" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_7"
                style="@style/numButton"
                android:text="7" />

            <TextView
                android:id="@+id/btn_8"
                style="@style/numButton"
                android:text="8" />

            <TextView
                android:id="@+id/btn_9"
                style="@style/numButton"
                android:text="9" />

            <TextView
                android:id="@+id/btn_division"
                style="@style/actionButton"
                android:text="รท" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_4"
                style="@style/numButton"
                android:text="4" />

            <TextView
                android:id="@+id/btn_5"
                style="@style/numButton"
                android:text="5" />

            <TextView
                android:id="@+id/btn_6"
                style="@style/numButton"
                android:text="6" />

            <TextView
                android:id="@+id/btn_plus"
                style="@style/actionButton"
                android:text="+" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_1"
                style="@style/numButton"
                android:text="1" />

            <TextView
                android:id="@+id/btn_2"
                style="@style/numButton"
                android:text="2" />

            <TextView
                android:id="@+id/btn_3"
                style="@style/numButton"
                android:text="3" />



            <TextView
                android:id="@+id/btn_minus"
                style="@style/actionButton"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_0"
                style="@style/numButton"
                android:text="0" />

            <TextView
                android:id="@+id/btn_comma"
                style="@style/numButton"
                android:text="." />





            <TextView
                android:id="@+id/btn_equally"
                style="@style/actionButton"
                android:text="=" />

            <TextView
                android:id="@+id/btn_Del"
                style="@style/actionButton"
                android:text="Del" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
